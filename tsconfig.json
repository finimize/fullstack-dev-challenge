{
    "compilerOptions": {
      "lib": [
        "es5",
        "es6",
        "dom",
        "es2017" 
      ],
      "baseUrl": "./",
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
      "importHelpers": true,
      "module": "commonjs",
      "outDir": "dist",
      "removeComments": true,
      "sourceMap": true,
      "strict": true,
      "target": "es6",
      "moduleResolution": "node",
      "types": [
        "node"
      ],
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "include": [
      "./**/*.ts",
    ],
    "exclude": [
      "./client"
    ]
   }